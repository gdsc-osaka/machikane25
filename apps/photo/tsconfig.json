// App Hosting では上位ディレクトリの tsconfig.json を extend すると
// tsconfig.json が見つからずにビルドエラーになるため、
// 直接設定を記述する
{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"noEmit": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"baseUrl": "src",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"references": [
		{
			"path": "tsconfig.test.json"
		}
	],
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx"]
}
