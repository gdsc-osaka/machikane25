rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isStaff() {
      return isSignedIn() && request.auth.token.isStaff == true;
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId) || isStaff();
    }

    match /surveyLedger/{attendeeId} {
      allow read, write: if isOwner(attendeeId) || isStaff();
    }

    match /rewards/{attendeeId} {
      allow read, write: if isOwner(attendeeId) || isStaff();
    }
  }
}
